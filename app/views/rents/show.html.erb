<h1>閲覧</h1>

<p>
  <strong>物件名:</strong>
  <%= @rent.name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @rent.price %>
</p>

<p>
  <strong>住所:</strong>
  <%= @rent.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @rent.age %>
</p>

<p>
  <strong>備考:</strong>
  <%= @rent.remarks %>
</p>

<tr><td><hr width="1000"></td></tr>

<% n = 0 %>
<% @stations.each do | station | %>
<h3>最寄り駅<%= n += 1 %></h3>

  <p>路線名:
  <%= station.route %></p>

  <p>駅名:
  <%= station.station %></p>

  <p>徒歩分数:
  <%= station.time %></p>

<% end %>

